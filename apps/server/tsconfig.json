{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "noEmit": false,
    "types": ["node", "jest"],
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "incremental": true,
    "outDir": "./dist",
    "rootDir": ".",
    "paths": { "prisma/*": ["prisma/*"] }
  },

  "include": ["src/**/*.ts", "prisma/**/*.ts"],
  "exclude": ["node_modules", "dist", "prisma/seeder"],
  "references": [{ "path": "../../packages/types" }]
}
