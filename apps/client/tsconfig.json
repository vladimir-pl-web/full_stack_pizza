{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "incremental": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true, // ✅ keep noEmit for client
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "~/components/*": ["./components/*"], // ✅ This makes shadcn place files there
      "~/lib/*": ["./lib/*"],
      "~/hooks/*": ["./hooks/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", ".next/types/**/*.ts", "next.config.js"],
  "exclude": ["node_modules"],
  "references": [{ "path": "../../packages/types" }]
}
