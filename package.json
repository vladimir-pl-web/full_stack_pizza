{
  "name": "pizza_fullstack",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/client",
    "apps/server",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run start --workspace apps/server\" \"npm run dev --workspace apps/client\"",
    "build": "concurrently \"npm run build --workspace apps/server\" \"npm run build --workspace apps/client\"",
    "start": "concurrently \"npm run start --workspace apps/server\" \"npm run start --workspace apps/client\"",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "clean": "rimraf node_modules && rimraf apps/*/node_modules && rimraf apps/*/dist",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.14",
    "@types/node": "^24.2.1 ",
    "concurrently": "^9.2.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "rimraf": "^6.0.1",
    "typescript": "^5",
    "typescript-eslint": "^8.20.0"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "dayjs": "^1.11.10",
    "lodash": "^4.17.21",
    "react-use": "^17.6.0",
    "zod": "^4.0.17"
  }
}
